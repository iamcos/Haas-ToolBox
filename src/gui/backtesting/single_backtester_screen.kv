<SingleBacktesterScreen>:
    MainWindow:
        TitleLabel:
            text: "Backtesting"

        BoxLayout:
            spacing: 20

            GridLayout:
                id: info_grid_layout
                cols: 1
                spacing: 0, 20

            HotKeysLayout:
                id: hotkeys_layout
                    

        BoxLayout:
            size_hint_y: 0.05
            padding: 0, 10
            Button:
                id: back_button
                text: 'Back option selection'
                on_release: root.back_to_option_selector()
            Button:
                text: 'Back to menu'
                on_release: root.manager.current = 'menu'

