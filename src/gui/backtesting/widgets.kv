<BacktestingInfoLayout>:
    size_hint_y: 50
    size_hint_y: None


<BacktestingInfoLabel>:
    height: self.texture_size[1]
    font_size: 30


<PlotLayout>:
    size_hint_y: 425


<HotKeysLayout>:
    id: hotkeys_grid
    padding: 20
    cols: 2
    spacing: 10, 20
    size: self.minimum_size
    size_hint_x: None


<ActionButtonLabel>:
    size_hint: None, None
    font_size: 25
    halign: "left"
    size: self.texture_size
    background_color: 0, 0, 0


<ActionHotkeyLabel>:
    size_hint: None, None
    font_size: 20
    halign: "right"
    size: self.texture_size

